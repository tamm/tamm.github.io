{
  "name": "blog-tutorial-c498",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "prebuild:remix": "npm run svg-to-components",
    "build:remix": "remix build",
    "prebuild:static": "npm run build:remix",
    "build:static": "export NODE_ENV='production'; export PORT=3333; yarn start || kill $PPID & sleep 10 && wget --wait=2 --no-host-directories --level=inf --recursive --page-requisites --user-agent=Mozilla --no-parent --convert-links --adjust-extension --no-clobber -e robots=off -R js http://localhost:$PORT -P static; kill $PPID",
    "predev": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && echo 'pre-commit git hook copied'",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -i ./app/styles/custom.css -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run",
    "spellcheck": "cspell **/* --unique",
    "spellcheck:ci": "cspell **/* --unique --fail-fast",
    "spellcheck:add-unknown-words-to-custom-dictionary": "cspell lint **/* --unique --words-only --no-progress --no-summary >> .cspell/custom-words.txt && echo .cspell/custom-words.txt",
    "svg-to-components": "npx @svgr/cli --out-dir app/images/svg -- ./images",
    "svg-to-components:watch": "npm-watch svg-to-components",
    "dev:svg": "run-s svg-to-components:watch"
  },
  "watch": {
    "svg-to-components": {
      "patterns": [
        "images"
      ],
      "extensions": "svg",
      "quiet": false
    }
  },
  "prettier": {},
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@remix-run/node": "^1.7.3",
    "@remix-run/react": "^1.7.3",
    "@remix-run/serve": "^1.7.3",
    "@remix-run/server-runtime": "^1.7.3",
    "@svgr/cli": "^6.5.0",
    "@svgr/plugin-jsx": "^6.5.0",
    "@svgr/plugin-prettier": "^6.5.0",
    "@svgr/plugin-svgo": "^6.5.0",
    "@types/lodash.debounce": "^4.0.7",
    "@types/markdown-it": "^12.2.3",
    "@wooorm/starry-night": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "dompurify": "^2.4.0",
    "github-markdown-css": "^5.1.0",
    "highlight.js": "^11.6.0",
    "isbot": "^3.5.3",
    "lodash.debounce": "^4.0.8",
    "lowlight": "^2.7.0",
    "marked": "^4.1.1",
    "npm-watch": "^0.11.0",
    "pretty-lights": "^0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-typedjson": "^0.1.3",
    "remix-utils": "^3.4.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@remix-run/dev": "^1.7.3",
    "@remix-run/eslint-config": "^1.7.3",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/eslint": "^8.4.6",
    "@types/marked": "^4.0.7",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "@vitest/coverage-c8": "^0.23.4",
    "autoprefixer": "^10.4.11",
    "binode": "^1.0.5",
    "c8": "^7.12.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cspell": "^6.12.0",
    "cypress": "^10.8.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "happy-dom": "^6.0.4",
    "msw": "^0.47.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "prettier": "2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.23.4",
    "yarn": "^1.22.19"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
