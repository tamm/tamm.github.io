---
import { ViewTransitions } from 'astro:transitions';
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import DarkModeScript from '@/components/DarkModeScript.astro';
import Analytics from '@/components/Analytics.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  isHomepage?: boolean;
  lcpImage?: string; // Preload hint for LCP image (WebP)
}

const {
  title,
  description = 'Personal blog and digital home of Tamm Sjodin',
  image = '/og-default.png',
  type = 'website',
  isHomepage = false,
  lcpImage
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | tamm.in</title>
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | tamm.in`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="tamm.in" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={`${title} | tamm.in`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="tamm.in RSS Feed" href="/rss.xml" />

    <!-- Preload LCP image -->
    {lcpImage && <link rel="preload" as="image" href={lcpImage} type="image/webp" fetchpriority="high" />}

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f48031" />
    <meta name="theme-color" content="#f48031" />

    <DarkModeScript />
    <Analytics />
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-100 flex flex-col">
    <Header isHomepage={isHomepage} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
