---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import DarkModeScript from '@/components/DarkModeScript.astro';
import Analytics from '@/components/Analytics.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Personal blog and digital home of Tamm Sjodin' } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | tamm.in</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#f48031" />
    <meta name="theme-color" content="#f48031" />

    <!-- Optimize CSS delivery to reduce render-blocking -->
    <script>
      (function () {
        const optimizeCSS = () => {
          const links = document.querySelectorAll('link[rel="stylesheet"]');
          links.forEach((link) => {
            if (link.dataset.optimized) return;
            const href = link.getAttribute('href');
            if (href) {
              link.dataset.optimized = 'true';
              link.media = 'print';
              link.onload = () => {
                link.media = 'all';
              };
              setTimeout(() => {
                if (link.media === 'print') link.media = 'all';
              }, 3000);
            }
          });
        };
        if (document.readyState !== 'loading') {
          optimizeCSS();
        } else {
          document.addEventListener('DOMContentLoaded', optimizeCSS);
        }
        if (typeof MutationObserver !== 'undefined') {
          const observer = new MutationObserver(optimizeCSS);
          observer.observe(document.head, { childList: true, subtree: false });
        }
      })();
    </script>

    <DarkModeScript />
    <Analytics />
  </head>
  <body class="min-h-screen bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-100 flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
